{
  "buildCommand": "cd packages/app && npm install && npm run build",
  "outputDirectory": "packages/app/.next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "packages/app/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}